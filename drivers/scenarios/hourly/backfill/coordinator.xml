<coordinator-app name="${driver}_hourly_backfill-C"
  frequency="${coord:days(1)}" start="${startTime}" end="${endTime}" timezone="${timeZone}"
  xmlns="uri:oozie:coordinator:0.4" xmlns:sla="uri:oozie:sla:0.2">
  <controls>
    <timeout>${timeout}</timeout> 
    <concurrency>${concurrency}</concurrency>
    <throttle>${throttle}</throttle>
  </controls>

  <datasets>
    <dataset name="driver_hourly_backfill" frequency="${coord:days(1)}"
      initial-instance="${startTime}" timezone="${timeZone}">
      <uri-template>${completion_flags}/y=${YEAR}/m=${MONTH}/d=${DAY}</uri-template>
      <done-flag>_SUCCESS</done-flag>
    </dataset>
  </datasets>

  <output-events>
    <data-out name="outcome_ready" dataset="driver_hourly_backfill">
      <instance>${coord:current(0)}</instance>
    </data-out>
  </output-events>

  <action>
    <workflow>
      <app-path>${CWD}/context.xml</app-path>
      <configuration>
        <property>
          <name>nominal_time</name>
          <value>${coord:nominalTime()}</value>
        </property>
        <property>
          <name>YEAR</name>
          <value>${coord:formatTime(coord:nominalTime(), 'yyyy')}</value>
        </property>
        <property>
          <name>MONTH</name>
          <value>${coord:formatTime(coord:nominalTime(), 'MM')}</value>
        </property>
        <property>
          <name>DAY</name>
          <value>${coord:formatTime(coord:nominalTime(), 'dd')}</value>
        </property>
        <property>
          <name>outcome_path</name>
          <value>${coord:dataOut('outcome_ready')}</value>
        </property>
      </configuration>
   </workflow>
  </action>
</coordinator-app>
